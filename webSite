<script>
    document.getElementById('bookingForm').addEventListener('submit', function (e) {
        e.preventDefault();

        let formData = {
            name: document.querySelector('input[name="name"]').value,
            device: document.querySelector('input[name="device"]').value,
            issue: document.querySelector('input[name="issue"]').value,
            phone: document.querySelector('input[name="phone"]').value,
            notes: document.querySelector('textarea[name="notes"]').value
        };

        fetch('ุฑุงุจุท_ุงูููุจ_ุงุจ_ูู_ูููู', {
            method: 'POST',
            body: JSON.stringify(formData),
            headers: {
                'Content-Type': 'application/json'
            }
        }).then(response => response.text())
            .then(data => {
                alert('ุชู ุฅุฑุณุงู ุงูุทูุจ ุจูุฌุงุญ');
                document.getElementById('bookingForm').reset();
            }).catch(error => {
                alert('ุญุฏุซ ุฎุทุฃ ุฃุซูุงุก ุงูุฅุฑุณุงู');
